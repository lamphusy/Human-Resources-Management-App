                                                            Nam
                                                        </ComboBoxItem>
                                                        <ComboBoxItem>
                                                            Nữ
                                                        </ComboBoxItem>
                                                        <ComboBoxItem>
                                                            Khác
                                                        </ComboBoxItem>

                                                    </ComboBox>
                                                </WrapPanel>
                                            </StackPanel>
                                        </Grid>
