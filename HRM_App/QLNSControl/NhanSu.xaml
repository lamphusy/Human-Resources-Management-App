                                            VerticalAlignment="Center" HorizontalAlignment="Right"
                                            Height="56" Width="100" Margin="0,36,10.4,41.6" Click="excel_click" Background="Green">

                                            <materialDesign:PackIcon Kind="FileExcel" Width="40" Height="40" HorizontalAlignment="Left"/>

                                        </Button>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1">

                        <DataGrid x:Name="datagird" materialDesign:ScrollViewerAssist.ShowSeparators="True" HorizontalAlignment="Left" 
                                  Width="1265" SelectionChanged="mydatagrid" Margin="0,0,-34.6,-0.4" CanUserReorderColumns="False" Height="250" IsReadOnly="True"></DataGrid>


                    </Grid>
