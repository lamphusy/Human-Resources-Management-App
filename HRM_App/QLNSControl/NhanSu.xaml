                                            ToolTipService.Placement="Custom"
                                            Height="56" Width="100" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFD34B26" Margin="152,36,250.4,41.6">
                                            <StackPanel Width="200" Height="135" >
                                                <materialDesign:PackIcon Margin="8 0 0 0" Kind="AccountRemove" Width="50" Height="50" />
                                            </StackPanel>
                                        </Button >
                                        <Button Click="btnSuaNV_Click"
