                                            <TextBlock FontSize="15"  Margin="0 2 24 0" FontWeight="Medium" Width="76">Email:</TextBlock>
                                            <TextBox Width="201" Name="txtEmail" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignCheckBoxDisabled}" materialDesign:HintAssist.Hint="Nhập phòng" />
