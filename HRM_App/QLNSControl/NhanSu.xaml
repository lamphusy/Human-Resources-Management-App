                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="0 0 5 0" FontSize="15" FontWeight="Medium" VerticalAlignment="Center">Mã nhân viên:</TextBlock>
                                                <WrapPanel VerticalAlignment="Center">
                                                    <TextBox Width="200" x:Name="MANVTextBox" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignCheckBoxDisabled}" materialDesign:HintAssist.Hint="Nhập mã nhân vien" >
                                                    </TextBox>
                                                </WrapPanel>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="0 2 2 0" FontSize="15" FontWeight="Medium" VerticalAlignment="Center">Tên nhân viên:</TextBlock>
                                                <WrapPanel VerticalAlignment="Center">
                                                    <TextBox Width="201" x:Name="TENTextBox" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignCheckBoxDisabled}" materialDesign:HintAssist.Hint="Nhập tên nhân viên" >
                                                    </TextBox>
                                                </WrapPanel>
                                            </StackPanel>
                                        </Grid>
